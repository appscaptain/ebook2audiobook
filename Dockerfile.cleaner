FROM python:3.12-slim

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# Install PDF tools (poppler-utils gives us 'pdftotext')
RUN apt-get update && apt-get install -y --no-install-recommends \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

# Copy all files (including cleaner_script.py)
COPY . /app

# Run the cleaner script automatically
CMD ["python3", "cleaner_script.py"]
